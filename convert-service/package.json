{
  "name": "@curvenote/jats-convert-server",
  "version": "0.0.1",
  "description": "Nodejs server for the JATS convert service",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "gcp-build": "npm run build",
    "clean": "rm -rf dist",
    "build": "esbuild src/index.ts --outfile=dist/index.js --bundle --platform=node --external:fsevents && cp dist/index.js ../cloudrun",
    "build:watch": "esbuild src/index.ts --outfile=dist/index.js --bundle --platform=node --watch --external:fsevents",
    "start": "node ./dist/index.js",
    "dev": "npm run clean; npm run build; NODE_ENV=development concurrently \"npm run build:watch\" \"nodemon\"",
    "lint": "eslint \"src/**/*.ts\" -c ../../.eslintrc.js",
    "lint:format": "npx prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "jest --config=jest.config.js --env=node --detectOpenHandles --forceExit --verbose",
    "test:watch": "jest --config=jest.config.js --watchAll --env=node --detectOpenHandles",
    "test:launch": "ts-node bin/launch.ts",
    "test:publish": "ts-node bin/publish.ts"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.14.0",
    "express": "^4.18.1",
    "fast-folder-size": "^2.3.0",
    "jats-convert": "^1.1.0",
    "jats-fetch": "^1.1.0",
    "js-yaml": "^4.1.0",
    "myst-cli": "^1.3.28",
    "myst-cli-utils": "^2.0.11",
    "myst-config": "^1.7.11",
    "myst-frontmatter": "^1.7.11"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^22.9.0",
    "dotenv": "^16.0.1",
    "esbuild": "^0.15.10",
    "eslint": "^8.21.0",
    "typescript": "^5.1.3",
    "vitest": "^0.32.0"
  },
  "nodemonConfig": {
    "signal": "SIGHUP",
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "dist/index.js"
    ],
    "exec": "node ./dist/index.js",
    "ext": "ts,yaml,json",
    "delay": "500"
  }
}
